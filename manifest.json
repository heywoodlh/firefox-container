{
    "manifest_version": 2,
    "name": "Heywoodlh Container",
    "version": "1.6.2",

    "description": "Fork of Google container with support for multiple services.",

    "icons": {
        "48": "icon.png",
        "96": "icon@2x.png"
    },

    "browser_specific_settings": {
      "gecko": {
        "id": "@heywoodlh-container",
        "strict_min_version": "58.0"
      }
    },

    "homepage_url": "https://github.com/heywoodlh/firefox-container",

    "permissions": [
        "<all_urls>",
        "contextualIdentities",
        "cookies",
        "management",
        "tabs",
        "webRequestBlocking",
        "webRequest",
        "storage"
    ],

    "background": {
        "scripts": [
            "main.js",
            "services/amazon.js",
            "services/google.js",
            "services/plex.js",
            "services/reddit.js",
            "services/spotify.js",
            "services/discord.js",
            "services/openai.js"
        ]
    },

    "options_ui": {
        "page": "options.html",
        "browser_style": true
    }
}
